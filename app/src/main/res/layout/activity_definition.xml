<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/background"
    android:layout_margin="0dp"
    android:filterTouchesWhenObscured="true"
    android:background="@color/cardview_shadow_start_color"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:animateLayoutChanges="true"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="#eeeeee"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        card_view:cardCornerRadius="2dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/content_parent"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_clear_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:id="@+id/content"
                android:paddingBottom="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/faint_text_color"
                    android:textSize="16sp"
                    android:text="SPANISH"
                    android:id="@+id/source_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ScrollView
                    android:layout_weight="1"
                    android:fillViewport="true"
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="22sp"
                        android:textColor="@color/language_content_color"
                        android:text="Hola, ingles s'ablmoos?."
                        android:id="@+id/source_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </ScrollView>
                <TextView
                    android:textColor="@color/faint_text_color"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:text="ENGLISH"
                    android:id="@+id/dest_langage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v4.widget.ContentLoadingProgressBar
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:id="@+id/loading"
                    android:layout_margin="5dp"
                    style="?android:attr/progressBarStyleSmallTitle"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content" />
                <ScrollView
                    android:animateLayoutChanges="true"
                    android:layout_weight="1"
                    android:fillViewport="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:visibility="gone"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/language_content_color"
                        android:id="@+id/dest_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </ScrollView>
            </LinearLayout>
            <Button
                android:id="@+id/copy_button"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/content"
                android:layout_marginTop="5dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/faint_text_color"
                android:drawableEnd="@drawable/ic_content_copy_black_24dp"
                android:drawableRight="@drawable/ic_content_copy_black_24dp"
                android:drawablePadding="5dp"
                android:text="COPY"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>